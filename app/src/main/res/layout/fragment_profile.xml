<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/profileFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime i Prezime"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/profileImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/infoBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_card_background"
        app:layout_constraintTop_toBottomOf="@id/profileFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profileBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biografija korisnika"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/profileInterests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interesi korisnika"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/likesCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lajkova: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/commentsCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komentara: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- ✅ OVO JE NOVO - Pratitelji -->
        <TextView
            android:id="@+id/followersCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pratitelji: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- ✅ OVO JE NOVO - Prati -->
        <TextView
            android:id="@+id/followingCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prati: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="UREDI PROFIL"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/infoBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ODJAVA"
        android:textColor="@android:color/white"
        android:backgroundTint="#666666"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
