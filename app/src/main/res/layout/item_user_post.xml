<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Korisničko ime -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korisnik"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <!-- Opis objave -->
        <TextView
            android:id="@+id/postDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis objave"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#66000000"
            android:padding="6dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/postTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prije 2 sata"
            android:textColor="#BBBBBB"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:layout_marginTop="4dp" />

        <!-- Slika objave -->
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            android:visibility="gone" />

        <!-- Like, Comment i Tri točkice -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_like_outline"
                android:contentDescription="Like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@id/likeIcon"
                app:layout_constraintTop_toTopOf="@id/likeIcon"
                app:layout_constraintBottom_toBottomOf="@id/likeIcon" />

            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_comment"
                android:contentDescription="Comment"
                app:layout_constraintStart_toEndOf="@id/likeCount"
                app:layout_constraintTop_toTopOf="@id/likeIcon" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@id/commentIcon"
                app:layout_constraintTop_toTopOf="@id/commentIcon"
                app:layout_constraintBottom_toBottomOf="@id/commentIcon" />

            <ImageView
                android:id="@+id/postOptions"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Opcije"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>